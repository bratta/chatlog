!!! html
%html
  %head
    %title Equitas Vanilla Minecraft
    %meta{name:"viewport", content:"width=device-width, initial-scale=1.0"}
    %link{href:"stylesheets/bootstrap.min.css", rel:"stylesheet", media:"screen"}
    %link{href:"stylesheets/chatlog.css", rel:"stylesheet", media:"screen"}
  %body
    %nav.navbar.navbar-default.navbar-fixed-top{role:"navigation"}
      .navbar-header
        %a.navbar-brand Equitas Vanilla Minecraft
      .collapse.navbar-collapse.navbar-ex1-collapse
        %ul.nav.navbar-nav
          %li{class: (@active == "") ? "active" : ""}
            %a{href: "/"} Main
          %li{class: (@active == "chatlog") ? "active" : ""}
            %a{href: "/chatlog"} Chatlog

    .container
      = yield

    %script{src:"javascripts/jquery-1.10.2.min.js"}
    %script{src:"javascripts/bootstrap.min.js"}
    %script{src:"javascripts/moment.min.js"}
    %script{src:"javascripts/bootstrap-sortable.js"}
    %script{src:"javascripts/chatlog.js"}
